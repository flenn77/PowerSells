<div id="formContainer">
    {{ form_start(form) }}
        <div id="firstLineFormNew">
                {{ form_widget(form.productName, {'attr': {'placeholder': 'Nom du produit'}}) }}
                {{ form_widget(form.price, {'attr': {'placeholder': 'Prix'}}) }}
        </div>
        <div id="secondLineFormNew">
                {{ form_widget(form.category) }}
                {{ form_widget(form.stock, {'attr': {'placeholder': 'Stock'}}) }}
        </div>
        <div id="thirdLineFormNew">
                {{ form_widget(form.description, {'attr': {'placeholder': 'Description'}}) }}
        </div>
        <div id="fourthLineFormNew">
                <button type="reset" class="btnResetForm">RÃ©initialiser</button>
                {{ form_row(form.save, {'attr': {'class': 'btnSaveForm'}}) }}
        </div>
    {{ form_end(form) }}
</div>
{% endblock %}
